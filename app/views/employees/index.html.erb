<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><a href="mailto:<%=employee.email%>"><%= employee.email %></a></td>
      </tr>
    <% end %>
  </tbody>
</table>
