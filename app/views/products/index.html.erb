<%= link_to 'Home', root_path %>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
